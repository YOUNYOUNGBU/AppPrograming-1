1. 플러터로 숫자 야구 게임 만들기
지금은 하나도 몰라서 코드 전체를 copilot 에게 물어봤다.
아주 잘 작동된다.
이걸 혼자 짜려면 얼마나 걸리려나

import 'dart:math';
import 'package:flutter/material.dart';

void main() {
  runApp(NumberBaseballApp());
}

class NumberBaseballApp extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      title: '숫자 야구 게임',
      theme: ThemeData(primarySwatch: Colors.blue),
      home: NumberBaseballHome(),
    );
  }
}

class NumberBaseballHome extends StatefulWidget {
  @override
  _NumberBaseballHomeState createState() => _NumberBaseballHomeState();
}

class _NumberBaseballHomeState extends State<NumberBaseballHome> {
  final _randomNumbers = <int>[];
  final _controller = TextEditingController();
  String _message = '';
  int _attempts = 0;

  @override
  void initState() {
    super.initState();
    _generateRandomNumbers();
  }

  void _generateRandomNumbers() {
    final random = Random();
    while (_randomNumbers.length < 3) {
      int num = random.nextInt(9) + 1; // 1~9 사이의 고유 숫자 생성
      if (!_randomNumbers.contains(num)) {
        _randomNumbers.add(num);
      }
    }
    print('정답 숫자(디버깅용): $_randomNumbers');
  }

  void _checkGuess(String input) {
    if (input.length != 3 || input.contains(RegExp(r'[^0-9]'))) {
      setState(() {
        _message = '입력은 3자리 숫자여야 합니다.';
      });
      return;
    }

    final guess = input.split('').map(int.parse).toList();
    int strikes = 0;
    int balls = 0;

    for (int i = 0; i < 3; i++) {
      if (guess[i] == _randomNumbers[i]) {
        strikes++;
      } else if (_randomNumbers.contains(guess[i])) {
        balls++;
      }
    }

    setState(() {
      _attempts++;
      if (strikes == 3) {
        _message = '축하합니다! 정답입니다. 시도 횟수: $_attempts번';
      } else {
        _message = '스트라이크: $strikes, 볼: $balls';
      }
    });
  }

  void _resetGame() {
    setState(() {
      _randomNumbers.clear();
      _attempts = 0;
      _message = '';
      _generateRandomNumbers();
    });
  }

  @override
  void dispose() {
    _controller.dispose();
    super.dispose();
  }

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(title: Text('숫자 야구 게임')),
      body: Padding(
        padding: const EdgeInsets.all(16.0),
        child: Column(
          mainAxisAlignment: MainAxisAlignment.center,
          children: [
            Text('세 자리 숫자를 입력하세요:', style: TextStyle(fontSize: 20)),
            TextField(
              controller: _controller,
              keyboardType: TextInputType.number,
              maxLength: 3,
              decoration: InputDecoration(
                hintText: '예: 123',
                border: OutlineInputBorder(),
              ),
            ),
            SizedBox(height: 16),
            ElevatedButton(
              onPressed: () {
                _checkGuess(_controller.text);
                _controller.clear();
              },
              child: Text('제출'),
            ),
            SizedBox(height: 16),
            Text(
              _message,
              style: TextStyle(fontSize: 18, color: Colors.black87),
            ),
            SizedBox(height: 16),
            ElevatedButton(
              onPressed: _resetGame,
              child: Text('게임 리셋'),
            ),
          ],
        ),
      ),
    );
  }
}
